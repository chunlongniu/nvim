{
  "rust-analyzer.server.path": "$HOME/.cargo/bin/rust-analyzer",
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.maxLength": 25,
  "rust-analyzer.cachePriming.enable": true,
  "rust-analyzer.cachePriming.numThreads": 5,
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "clangd.initializationOptions": {
    "parameterHints": true,
    "typeHints": true,
    "maxLength": 50
  },
  "languageserver": {
    "css": {
      "command": "vscode-css-language-server",
      "args": ["--stdio"]
    },
    "coc-pyright": {
      "command": "pyright-langserver",
      "filetypes": ["py"],
      "rootPatterns": [
        "setup.py",
        "setup.cfg",
        "requirements.txt",
        ".git/",
        ".venv/"
      ],
      "initializationOptions": {
        "python.pythonPath": "python"
      }
    },
    "coc-clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/",
        ".clangd"
      ],
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
        "clangdPath": "/usr/bin/clangd",
        "cache": {
          "directory": "/tmp/clangd"
        }
      },
      "settings": {
        "clangd.arguments": ["-std=c++17"]
      }
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake", "CMakeLists.txt"],
      "rootPatterns": ["CMakeLists.txt"],
      "initializationOptions": {},
      "settings": {}
    },
    // "typescript": {
    //   "module": "./node_modules/typescript/lib/tsserver.js",
    //   "args": ["--stdio"],
    //   "filetypes": ["typescript", "typescriptreact"],
    //   "rootPatterns": ["tsconfig.json", "package.json", "jsconfig.json"],
    //   "initializationOptions": {},
    //   "settings": {
    //     "javascript.useCodeSnippetsOnMethodSuggest": true,
    //     "javascript.validate.enable": true
    //   }
    // },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "rootPatterns": ["*.lua"],
      "initializationOptions": {
        "diagnostics": true,
        "completion": true
      }
    }
  }
}
