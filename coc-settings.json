{
  "rust-analyzer.server.path": "$HOME/.cargo/bin/rust-analyzer",
  "rust-analyzer.diagnostics.enable": true,
  // "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.maxLength": 25,
  "rust-analyzer.cachePriming.enable": false,
  "rust-analyzer.cachePriming.numThreads": 2,
  "rust-analyzer.checkOnSave": false,

  "python.jediEnabled": false,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.pylintPath": "pylint",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pydocstyleArgs": ["--convention=google"],
  "python.linting.enabled": true,
  "python.linting.pylintArgs": [
      "--disable=missing-docstring",
      "--disable=C0111",
  ],
  "go.goplsOptions": {
      "staticcheck": true,
      "completeUnimported": true,
      "usePlaceholders": true,
      "analyses": {
          "unusedparams": true,
          "shadow": true
      }
  },
  "go.goplsPath": "gopls",
  "go.enable": true,
  "workspace.ignoredFolders": [
    "$HOME",
    "$HOME/.cargo/**",
    "$HOME/.rustup/**"
  ],

  // "clangd.initializationOptions": {
  //   "parameterHints": true,
  //   "typeHints": true,
  //   "maxLength": 50
  // },

  "languageserver": {
    "css": {
      "command": "vscode-css-language-server",
      "args": [
        "--stdio"
      ]
    },
    "coc-pyright": {
      "command": "pyright-langserver",
      "filetypes": [
        "py"
      ],
      "rootPatterns": [
        "setup.py",
        "setup.cfg",
        "requirements.txt",
        ".git/",
        ".venv/"
      ],
      "initializationOptions": {
        "python.pythonPath": "python"
      }
    },
    "coc-clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/",
        ".clangd"
      ],
      "filetypes": [
        "c",
        "cpp"
      ],
      "initializationOptions": {
        "clangdPath": "/usr/bin/clangd",
        "cache": {
          "directory": "/tmp/clangd"
        }
      },
      "settings": {
        "clangd.arguments": [
          "-std=c++17"
        ]
      }
    },
    "go": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
	      ".git/"
      ],
      "trace.server": "verbose",
      "filetypes": [
        "go"
      ]
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": [
        "cmake",
        "CMakeLists.txt"
      ],
      "rootPatterns": [
        "CMakeLists.txt"
      ],
      "initializationOptions": {},
      "settings": {}
    },
    "lua": {
      "command": "$HOME/.config/coc/extensions/coc-lua-data/lua-language-server/bin/lua-language-server",
      "filetypes": [
        "lua"
      ],
      "rootPatterns": [
        "*.lua"
      ],
      "initializationOptions": {
        "diagnostics": true,
        "completion": true
      }
    }
  }
}
